				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/repository.xml</descriptor>
						<descriptor>src/main/assembly/distribution.xml</descriptor>
